# Required - Claude API (for code generation orchestration)
ANTHROPIC_API_KEY=your_key_here

# Required - Azure AI Foundry Agent Service
AZURE_AI_FOUNDRY_ENDPOINT=https://AIDevPlayground-resource.services.ai.azure.com
AZURE_AI_FOUNDRY_PROJECT=AIDevPlayground
AZURE_AI_FOUNDRY_API_KEY=your_azure_ai_foundry_api_key

# Alternative - Azure OpenAI (Direct API)
AZURE_OPENAI_ENDPOINT=https://f5devazureopenai.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Frontend CORS
FRONTEND_URL=http://localhost:5173

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional - QA Pipeline Settings
MAX_ITERATIONS=3          # Max QA rework attempts (default: 3)
MIN_PASS_SCORE=70         # Minimum score to pass QA (default: 70)
API_TIMEOUT=120000        # API timeout in milliseconds (default: 120000)
